extends  ../layout
block content
    .swiper-container.index-swiper-container
        .swiper-wrapper
            each item in banners
                .swiper-slide
                    a(href="#{item.link}")
                        img(src="#{item.url}" target="_blank")
                        p.carousel-caption #{item.caption}
        .swiper-pagination
        .swiper-button-next.swiper-button-white
        .swiper-button-prev.swiper-button-white
    .product-container
        .container.white
            h2.category-title 分类
            .row.product-category
                each category in categories
                    .col-md-6.item
                        a(href="/category/#{category._id}")
                            img(src="#{category.cover}")
                            h3
                                p
                                  small #{category.subtitle}
                                span #{category.name}
        .container.white
            if  products&&products.length>0
                h2.category-title 初遇专区
                .row.product-list
                    each product in products
                        .col-md-3.item
                            a(href="/goods/#{product._id}")
                                img.cover(src="#{product.picture&&product.picture[0]}?imageView2/2/w/560/h/454/interlace/0/q/100")
                                h5.product-title #{product.name}
                                section.product-describe
                                    h6 #{product.subtitle}
                                    p 类型：#{product.type}
                                    p.ellipsis 原料：#{product.material}
                                    //p 口味：#{product.flavor}

        .container.white
            h2.category-title 每实每刻
            .product-assort
                .item
                    img(src="/images/tea.jpg")
                    section.title(style="padding-right:0")
                        .text 下午茶
                    img.img-icon(src="/images/teaHover.png")
                .item
                    img(src="/images/season.jpg")
                    section.title
                        .text 时令水果
                    img.img-icon(src="/images/season.png")
                .item
                    img(src="/images/coffee.jpg")
                    section.title
                        .text 咖啡
                    img.img-icon(src="/images/coffee.png")
                .item
                    img(src="/images/nearby_food.jpg")
                    section.title
                        .text 周边
                    img.img-icon(src="/images/nearby.png")
                .item
                    img(src="/images/mes_ar.jpg")
                    section.title
                        .text 专题
                    img.img-icon(src="/images/time_ms.png")
    script.
        $(function () {
            var mySwiper = new Swiper('.swiper-container', {
                pagination: '.swiper-pagination',
                nextButton:".swiper-button-next",
                prevButton:".swiper-button-prev",
                effect: 'fade',
                grabCursor: true,
                centeredSlides: true,
                slidesPerView: 'auto',
                autoplay:5000,
                loop:true,
                paginationClickable:true,

            })
        })

